    <script>
        // Hàm hiển thị thông báo khi nhấn vào tiêu đề bài viết
        function showArticleDetails(title) {
            alert("Bạn đang xem chi tiết bài viết: " + title);
        }

        // Hàm thay đổi màu nền của bài viết khi di chuột vào
        function highlightArticle(article) {
            article.style.backgroundColor = "#f0f8ff"; // Màu nền khi di chuột vào
        }

        // Hàm khôi phục màu nền của bài viết khi di chuột ra ngoài
        function resetArticle(article) {
            article.style.backgroundColor = "white"; // Khôi phục màu nền ban đầu
        }
    </script>
